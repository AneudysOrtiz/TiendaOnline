@model shoppingStore.Models.Item

@{ 
    ViewBag.Title = " Item -" + Model.Title;
}
<h2>@Model.Title</h2>
<p>
   <img alt="@Model.Title"
        src="@Model.ItemArtUrl" />
</p>
<div id="album-details">
    <p>
        <em>Category:</em>
        @Model.Category.Name
    </p>
    <p>
        <em>producer:</em>
        @Model.Producer.name
    </p>
    <p>
        <em>Price:</em>
        @String.Format("{0:F}",
       Model.Price)
    </p>
    <p class="button">
        @Html.ActionLink("Add to cart","AddToCart",
       "ShoppingCart", new { id = Model.ItemId}, "")
    </p>
</div>